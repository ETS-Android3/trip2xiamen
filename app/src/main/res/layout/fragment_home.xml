<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="match_parent"
		android:layout_height="match_parent">
	
	<FrameLayout
			android:id="@+id/fl_title"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">
		
		<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="Travel 2 Xiamen"
				android:textSize="@dimen/font_large"
				android:textAlignment="center"
				android:paddingVertical="@dimen/padding_small"
				android:background="@color/primary_light_color"
				android:textStyle="bold" />
	</FrameLayout>
	
	<androidx.core.widget.NestedScrollView
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_below="@+id/fl_title"
			android:layout_weight="1">
		
		<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:orientation="vertical">
			
			<FrameLayout
					android:layout_width="match_parent"
					android:layout_height="150dp"
					android:paddingHorizontal="@dimen/padding_medium"
					android:layout_marginBottom="@dimen/margin_large"
					android:layout_weight="1">
				
				<ImageView
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:src="@drawable/t2xm" />
			</FrameLayout>
			
			<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_marginHorizontal="@dimen/margin_medium"
					android:orientation="vertical">
				
				<TextView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginVertical="@dimen/margin_medium"
						android:textSize="@dimen/font_large"
						android:text="Top Places"
						android:textStyle="bold" />
				
				
				<androidx.recyclerview.widget.RecyclerView
						android:id="@+id/rv_top_places"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"/>
				
				<TextView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginVertical="@dimen/margin_medium"
						android:textSize="@dimen/font_large"
						android:text="Latest Reviews"
						android:textStyle="bold" />
				
				<androidx.recyclerview.widget.RecyclerView
						android:id="@+id/rv_latest_reviews"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"/>
			</LinearLayout>
		</LinearLayout>
	</androidx.core.widget.NestedScrollView>
</RelativeLayout>