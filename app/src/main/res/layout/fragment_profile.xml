<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="match_parent"
		android:layout_height="match_parent">
	
	<FrameLayout
			android:id="@+id/fl_title"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">
		
		<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content">
			
			<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text="Profile"
					android:textSize="@dimen/font_large"
					android:textAlignment="center"
					android:paddingVertical="@dimen/padding_small"
					android:background="@color/primary_light_color"
					android:textStyle="bold" />
		</RelativeLayout>
	</FrameLayout>
	
	<ScrollView
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_below="@+id/fl_title"
			android:layout_weight="1">
		
		<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_marginHorizontal="@dimen/margin_medium"
				android:orientation="vertical">
			
			<ImageView
					android:id="@+id/iv_profile_image"
					android:layout_width="match_parent"
					android:layout_height="200dp"
					android:src="@drawable/t2xm" />
			
			<TextView
					android:id="@+id/tv_username"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text="username"
					android:textSize="@dimen/font_large"
					android:textAlignment="center"
					android:paddingVertical="@dimen/padding_small" />
			
			<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginVertical="@dimen/margin_medium"
					android:orientation="horizontal">
				
				<Button
						android:id="@+id/btn_my_favourite"
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:drawableTop="@drawable/ic_baseline_favorite_24"
						android:layout_weight="1"
						android:layout_margin="@dimen/margin_small"
						android:text="My Favourite"
						android:textColor="@color/black"
						style="@style/Widget.MaterialComponents.Button.TextButton" />
				
				<Button
						android:id="@+id/btn_my_reviews"
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:drawableTop="@drawable/ic_baseline_comment_24"
						android:layout_weight="1"
						android:layout_margin="@dimen/margin_small"
						android:text="My Reviews"
						android:textColor="@color/black"
						style="@style/Widget.MaterialComponents.Button.TextButton" />
			
			</LinearLayout>
			
			<Button
					android:id="@+id/btn_settings"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text="Settings"
					android:layout_marginHorizontal="@dimen/margin_large" />
		
		</LinearLayout>
	</ScrollView>

</RelativeLayout>
