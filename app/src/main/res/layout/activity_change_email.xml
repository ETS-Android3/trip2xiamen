<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context=".application.activity.ChangeEmailActivity">
	
	<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical"
			android:layout_marginHorizontal="@dimen/margin_medium"
			android:layout_marginBottom="@dimen/margin_large"
			android:layout_gravity="center">
		
		<com.google.android.material.textfield.TextInputLayout
				android:id="@+id/lay_current_email"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:hint="Current Email"
				style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
				app:errorEnabled="true"
				android:layout_marginVertical="@dimen/margin_small">
			
			<com.google.android.material.textfield.TextInputEditText
					android:id="@+id/et_current_email"
					android:inputType="text"
					android:layout_width="match_parent"
					android:layout_height="wrap_content" />
		</com.google.android.material.textfield.TextInputLayout>
		
		<com.google.android.material.textfield.TextInputLayout
				android:id="@+id/lay_new_email"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:hint="New Email"
				style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
				app:errorEnabled="true"
				android:layout_marginVertical="@dimen/margin_small">
			
			<com.google.android.material.textfield.TextInputEditText
					android:id="@+id/et_new_email"
					android:inputType="text"
					android:layout_width="match_parent"
					android:layout_height="wrap_content" />
		</com.google.android.material.textfield.TextInputLayout>
		
		<com.google.android.material.textfield.TextInputLayout
				android:id="@+id/lay_confirm_email"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:hint="Confirm Email"
				style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
				app:errorEnabled="true"
				android:layout_marginVertical="@dimen/margin_small">
			
			<com.google.android.material.textfield.TextInputEditText
					android:id="@+id/et_confirm_email"
					android:inputType="text"
					android:layout_width="match_parent"
					android:layout_height="wrap_content" />
		</com.google.android.material.textfield.TextInputLayout>
		
		<Button
				android:id="@+id/btn_confirm_change"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginVertical="@dimen/margin_medium"
				android:text="Change Email" />
	
	</LinearLayout>
</ScrollView>
